<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="#FFFFFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ðŸŸ© Section 1: Toilet Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toilet Name"
                android:textSize="24sp"
                android:textStyle="normal"
                android:textColor="#1A1A1A"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="-5dp" />


            <!-- Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Rating Value -->
                <TextView
                    android:id="@+id/txtRatingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textColor="#222222"
                    android:layout_marginEnd="-35dp" />

                <!-- Rating Bar -->
                <RatingBar
                    android:id="@+id/LavaboRating"
                    style="@style/CustomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_gravity="center_vertical"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:layout_marginLeft="-10dp"
                    android:stepSize="0.5"
                    android:scaleX="0.55"
                    android:scaleY="0.55" />


                <!-- Rating Count -->
                <TextView
                    android:id="@+id/txtRatingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0)"
                    android:textSize="13sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#666666"
                    android:layout_marginStart="-45dp" />
            </LinearLayout>

            <!-- Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/LavaboImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_not_ava"
                app:shapeAppearanceOverlay="@style/RoundedImageStyle" />


            <!-- Description -->
            <TextView
                android:id="@+id/LavaboDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modern, net i ben equipat. Amb dutxa i assecador. Accessible per a persones amb mobilitat reduÃ¯da."
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:justificationMode="inter_word"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/LavaboCaracteristicas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CaracterÃ­stiques:"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:justificationMode="inter_word"
                android:layout_marginBottom="-2dp" />


            <LinearLayout
                android:id="@+id/icon_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="4dp"
                android:padding="8dp">

                <!-- Example icons. Visibility can be set dynamically in code -->
                <ImageView
                    android:id="@+id/icon_men"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_men"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/icon_women"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_women"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/icon_unisex"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_unisex"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/icon_accessible"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_accessible"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/icon_not_free"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_payment"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/icon_free"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_not_payment"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/icon_baby"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baby"
                    android:visibility="visible"
                    android:layout_gravity="left"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

            <!-- Button -->
            <Button
                android:id="@+id/btnAddValoration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Afageix una valoraciÃ³" />
        </LinearLayout>


        <!-- â–¬â–¬â–¬ Separator â–¬â–¬â–¬ -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:dividerThickness="1dp"/>


        <!-- ðŸŸ¨ Section 2: User Valorations -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valoracions d'altres usuaris"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="#1A1A1A"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="10dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerValorations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_valoration" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
