<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Color del botón -->
    <solid android:color="@color/white" /> <!-- Cambia esto al color que prefieras -->

    <!-- Bordes -->
    <stroke
        android:width="2dp"
        android:color="@android:color/black" /> <!-- Opcional: borde blanco -->

    <!-- Tamaño (opcional, puede definirse en el layout) -->
    <size
        android:width="56dp"
        android:height="56dp"/>

    <!-- Sombra (opcional) -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"/>
</shape>